{
	"name": "statue-ssg",
	"version": "0.2.15",
	"description": "A simple static site generator for markdown content with SvelteKit",
	"type": "module",
	"main": "src/index.js",
	"svelte": "src/lib/index.ts",
	"exports": {
		".": {
			"types": "./src/lib/index.ts",
			"svelte": "./src/lib/index.ts",
			"default": "./src/index.js"
		},
		"./cms/*": "./src/lib/cms/*",
		"./components": {
			"types": "./src/lib/index.ts",
			"svelte": "./src/lib/index.ts"
		},
		"./components/*": "./src/lib/components/*",
		"./themes/*": "./src/lib/themes/*",
		"./styles.css": "./src/lib/index.css",
		"./resources/*": "./resources/*",
		"./package.json": "./package.json"
	},
	"bin": {
		"statue-setup": "./postinstall.js",
		"statue": "./scripts/statue-cli.js"
	},
	"files": [
		"src",
		"content",
		"resources",
		"templates",
		"svelte.config.js",
		"vite.config.js",
		"tailwind.config.js",
		"postcss.config.js",
		"site.config.js",
		"postinstall.js",
		"scripts",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "node scripts/generate-seo-files.js && node scripts/run-pagefind.js",
		"preview": "npx -y serve build",
		"preview:vite": "vite preview",
		"prepublishOnly": "npm run build",
		"setup": "node postinstall.js",
		"test": "vitest run && npm run test:unit -- --run",
		"test:watch": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"lint:check": "eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"format:check": "prettier --plugin-search-dir . --check .",
		"release": "npm run build && npm publish",
		"test:local": "./scripts/test-local.sh",
		"docker:build": "cd test/hermetic && docker build -t statue-ssg .",
		"docker:test": "npm run docker:build && ./test/hermetic/docker_test.sh",
		"template:load": "node scripts/manage-templates.js load",
		"template:save": "node scripts/manage-templates.js save",
		"template:list": "node scripts/manage-templates.js list",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.14",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^4.2.3",
		"@types/node": "^22.13.13",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitest/browser-playwright": "^4.0.15",
		"autoprefixer": "^10.4.21",
		"esbuild": "^0.20.2",
		"eslint": "^8.56.0",
		"eslint-plugin-svelte": "^2.35.1",
		"jsdom": "^23.2.0",
		"pagefind": "^1.1.1",
		"playwright": "^1.57.0",
		"postcss": "^8.5.3",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"rimraf": "^5.0.10",
		"svelte": "^5.46.0",
		"svelte-sitemap": "^2.7.0",
		"typescript": "^5.0.0",
		"vite": "^7.3.0",
		"vitest": "^4.0.16",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@fontsource/fraunces": "^5.2.9",
		"@fontsource/ibm-plex-sans": "^5.2.8",
		"chalk": "^5.4.1",
		"commander": "^13.1.0",
		"fs-extra": "^11.3.0",
		"gray-matter": "^4.0.3",
		"marked": "^15.0.7"
	},
	"keywords": [
		"static-site-generator",
		"markdown",
		"ssg",
		"sveltekit",
		"static-site",
		"content-management"
	],
	"author": "Semih Polat",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/accretional/statue.git"
	},
	"bugs": {
		"url": "https://github.com/accretional/statue/issues"
	},
	"homepage": "https://github.com/accretional/statue#readme"
}
